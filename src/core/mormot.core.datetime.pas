function TSynDate.ParseFromText(var P: PUTF8Char): boolean;
var
  L: PtrInt;
  Y, M, D: cardinal;
begin
  result := false;
  if P = nil then
    exit;
  while P^ in [#9, ' '] do
    inc(P);
  L := 0;
  while P[L] in ['0'..'9', '-', '/'] do
    inc(L);
  if not Iso8601ToDatePUTF8Char(P, L, Y, M, D) then
    exit;
  Year := Y;
  Month := M;
  DayOfWeek := 0;
  Day := D;
  inc(P, L); // move P^ just after the date
  result := true;
end;

