procedure TSynSystemTime.FromDate(const dt: TDateTime);
var
  t, t2, t3: PtrUInt;
begin
  t := Trunc(dt);
  t := (t + 693900) * 4 - 1;
  if PtrInt(t) >= 0 then
  begin
    t3 := t div 146097;
    t2 := (t - t3 * 146097) and not 3;
    t := PtrUInt(t2 + 3) div 1461; // PtrUInt() needed for FPC i386
    Year := t3 * 100 + t;
    t2 := ((t2 + 7 - t * 1461) shr 2) * 5;
    t3 := PtrUInt(t2 - 3) div 153;
    Day := PtrUInt(t2 + 2 - t3 * 153) div 5;
    if t3 < 10 then
      inc(t3, 3)
    else
    begin
      dec(t3, 9);
      inc(Year);
    end;
    Month := t3;
    DayOfWeek := 0; // not set by default
  end
  else
    PInt64(@Year)^ := 0;
end;

procedure TSynSystemTime.FromTime(const dt: TDateTime);
begin
  FromMS(QWord(round(abs(dt) * MSecsPerDay)) mod MSecsPerDay);
end;

procedure TSynSystemTime.FromMS(ms: PtrUInt);
var
  t: PtrUInt;
begin
  t := ms div 3600000;
  Hour := t;
  dec(ms, t * 3600000);
  t := ms div 60000;
  Minute := t;
  dec(ms, t * 60000);
  t := ms div 1000;
  Second := t;
  dec(ms, t * 1000);
  MilliSecond := ms;
end;

procedure TSynSystemTime.FromSec(s: PtrUInt);
var
  t: PtrUInt;
begin
  t := s div 3600;
  Hour := t;
  dec(s, t * 3600);
  t := s div 60;
  Minute := t;
  dec(s, t * 60);
  Second := s;
  MilliSecond := 0;
end;

